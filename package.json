{
    "name": "proxy-wave",
    "version": "1.0.2",
    "description": "High-performance Remote Desktop & Screen Sharing",
    "author": "Shadab <shadab@infraaceops.com>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build",
        "build:win": "electron-builder build --win",
        "build:mac": "electron-builder build --mac",
        "build:linux": "electron-builder build --linux"
    },
    "build": {
        "appId": "com.proxywave.app",
        "productName": "ProxyWave",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.video"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "files": [
            "main.js",
            "preload.js",
            "RemoteControl.exe",
            "client/**/*",
            "node_modules/**/*"
        ]
    },
    "dependencies": {
        "peerjs": "^1.5.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}