{
    "name": "proxy-wave",
    "version": "v1.0.8",
    "description": "High-performance Remote Desktop & Screen Sharing",
    "author": "Shadab <shadab@infraaceops.com>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build",
        "build:win": "electron-builder build --win",
        "build:mac": "electron-builder build --mac",
        "build:linux": "electron-builder build --linux",
        "release": "node update-release.js"
    },
    "build": {
        "appId": "com.proxywave.app",
        "productName": "ProxyWave",
        "directories": {
            "output": "dist"
        },
        "icon": "client/assets/icon.png",
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "client/assets/icon.png",
            "publisherName": "Shadab (InfraAceOps)",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.video",
            "icon": "client/assets/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "files": [
            "main.js",
            "preload.js",
            "RemoteControl.exe",
            "client/assets/icon.png",
            "client/**/*",
            "node_modules/**/*"
        ]
    },
    "dependencies": {
        "peerjs": "^1.5.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}